<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:orientation="vertical"
    tools:context=".Books_Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/ic_left" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Books Add"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_BookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Book Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#332D2D"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_BookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Author Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#332D2D"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_BookLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Book Language"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#332D2D"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_BookCate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Enter Book Categories"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#332D2D"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_BookDesc"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textbox_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:hint="Enter Book Description"
            android:inputType="textMultiLine|textPersonName"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textColorHint="#332D2D"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_addBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/poppins"
        android:text="Add Book"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_ViewBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/purple_200"
        android:fontFamily="@font/poppins"
        android:text="View Books"
        android:textColor="#0C0C0C" />
</LinearLayout>